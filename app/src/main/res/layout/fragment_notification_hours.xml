<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Notification_Hours.NotificationHFragment"
    android:id="@+id/fragment_notification">

   <!--
    <FrameLayout
        android:id="@+id/add_notification"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>
     -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TableLayout
            android:id="@+id/tableNotification"
            android:layout_width="match_parent"
            android:layout_height="550dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="150dp"
            android:background="#f1f1f1">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#f1f1f1">

                <TextView
                    android:id="@+id/Date"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Dtae"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/Shift"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Shift"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/Line"
                    android:layout_column="1"
                    android:layout_weight="0"
                    android:gravity="center"
                    android:text="Line"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/Of"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="OF"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/NbrOperator"

                    android:layout_column="1"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Nbr Operators"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/Htotal"
                    android:layout_column="1"
                    android:layout_weight="0"
                    android:gravity="center"
                    android:text="Total hours"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/Hextrat"
                    android:layout_column="1"
                    android:layout_weight="0"
                    android:gravity="center"
                    android:text="Overtime"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/Hdevolution"
                    android:layout_column="1"
                    android:layout_weight="0"
                    android:gravity="center"
                    android:text="Devolution hours"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/Hstopped"
                    android:layout_column="1"
                    android:layout_weight="0"
                    android:gravity="center"
                    android:text="Stopped hours"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/HnewProject"
                    android:layout_column="1"
                    android:layout_weight="0"
                    android:gravity="center"
                    android:text="New project"
                    android:textSize="15dp"
                    android:textStyle="bold" />

            </TableRow>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="520dp" />


        </TableLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
        <Button
            android:id="@+id/AddButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="0"
            android:layout_marginRight="10dp"
            android:text="Add" />

    </LinearLayout>






</RelativeLayout>